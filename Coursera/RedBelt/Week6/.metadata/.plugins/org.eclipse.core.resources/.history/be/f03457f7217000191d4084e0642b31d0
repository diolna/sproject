  void AddFuture();

//надо дополнить диструктором. на случай если не біло ни одного запроса, что бы вся база
  //залилась до конца.

private:
  InvertedIndex index;
  Synchronized<vector<InvertedIndex>> streams;
  vector<future<void>> futures;
